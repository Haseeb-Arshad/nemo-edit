PORT=4000

# Google GenAI (Gemini)
GEMINI_API_KEY=
GENAI_MODEL=gemini-2.5-flash-image-preview

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_IMAGE_BUCKET=gen-images

# Pinata (IPFS) â€” used for file storage instead of Supabase Storage
# Obtain a JWT from Pinata (Settings -> API Keys)
PINATA_JWT=
# Optional overrides
PINATA_UPLOAD_ENDPOINT=https://uploads.pinata.cloud/v3/files
PINATA_GATEWAY_BASE=https://gateway.pinata.cloud/ipfs
# Prefer pinning to public IPFS instead of private uploads
PINATA_PREFER_IPFS=true
PINATA_PIN_ENDPOINT=https://api.pinata.cloud/pinning/pinFileToIPFS

# CORS (comma-separated origins). Example: http://localhost:5173,https://your.site
CORS_ORIGINS=http://localhost:5173

# Feature-parity extras
# Simple dev auth token for /api/v1/* endpoints
DEV_TOKEN=dev-token
# Provider selector for edit flow: gemini | mock
PROVIDER=gemini
